<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Hello.Views.DetailViewWantToWatchPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">

                <StackLayout Orientation="Horizontal">
                    <Button Text="move to Already Watch"
                        Clicked="MoveToAlreadyWatch"    
                    />
                    <Button Text="remove"
                            Clicked="Remove"    
                    />
                    <Button Text="Open IMDb"
                            Clicked="OpenURL"    
                    />
                </StackLayout>

                <StackLayout Orientation="Vertical">
                    <Label Text="{Binding Movie.imdbID}"/>
                    <Label Text="{Binding Movie.Title}"/>
                    <Label Text="{Binding Movie.Year}"/>
                    <Label Text="{Binding Movie.Genre}"/>
                    <Image Source="{Binding Movie.Poster}"/>
                    <Label Text="{Binding Movie.Director}"/>
                    <Label Text="{Binding Movie.imdbRating}"/>
                    <Label Text="{Binding Movie.Plot}"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>